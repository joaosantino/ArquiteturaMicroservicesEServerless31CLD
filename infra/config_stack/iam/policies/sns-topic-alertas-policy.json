{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "SNS:Subscribe",
        "SNS:SetTopicAttributes",
        "SNS:RemovePermission",
        "SNS:Receive",
        "SNS:Publish",
        "SNS:ListSubscriptionsByTopic",
        "SNS:GetTopicAttributes",
        "SNS:DeleteTopic",
        "SNS:AddPermission"
      ],
      "Condition": {
        "StringEquals": {
          "AWS:SourceAccount": "ID_ACCOUNT"
        }
      },
      "Resource": "arn:aws:sns:AWS_REGION:ID_ACCOUNT:Alertas"
    }
  ]
}